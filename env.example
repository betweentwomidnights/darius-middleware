# Database
# Phase 1: SQLite (just a filename, async handled by aiosqlite)
DATABASE_URL=sqlite+aiosqlite:///./darius_middleware.db

# Phase 2: Postgres
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/darius_middleware

# JWT Secret (generate a secure random string for production)
JWT_SECRET=dev-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440  # 24 hours

# Modal API (Phase 2)
# MODAL_API_URL=https://the-collabage-patch--modal-darius-web.modal.run
# MODAL_API_KEY=your-modal-api-key

# Billing settings
BILLING_POLL_INTERVAL_SECONDS=5.0
MINIMUM_CREDITS_TO_WARMUP=60.0  # Require at least 60 seconds of credit to start
SCALEDOWN_WINDOW_SECONDS=600  # 10 minutes, must match modal_darius.py (can reduce to 120-180 once iOS keepalive is reliable)

# Development
DEBUG=true
